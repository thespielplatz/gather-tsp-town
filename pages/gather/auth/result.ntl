<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>#title#</title>
    <meta name="description" content="an Error ...">
    <meta name="author" content="TheSpielplatz">

    <link rel="icon" href="/favicon.ico">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="preload" href="/static/fonts/PressStart2P-Regular.ttf" as="font" crossorigin="anonymous" />

    <!--
    <link rel="stylesheet" href="css/styles.css?v=1.0">
    -->
    <style>
        @font-face {
            font-family: 'PressStart2P';
            src: url('/static/fonts/PressStart2P-Regular.ttf') format('truetype'); /* Chrome 4+, Firefox 3.5, Opera 10+, Safari 3â€”5 */
        }

        *{
            transition: all 0.6s;
        }

        html {
            height: 100%;
        }

        body{
            font-family: 'PressStart2P';
            color: #color#;
            margin: 0;
            background-color:#background#;
        }

        #main{
            display: table;
            width: 100%;
            height: 100vh;
            text-align: center;
        }

        .fof{
            display: table-cell;
            vertical-align: middle;
        }

        .fof h1{
            font-size: 12px;
            display: inline-block;
        }

        .fof p{
            font-size: 20px;
            font-style: italic;
            display: block;
        }
    </style>
</head>

<body>
<input type="hidden" id="success" value="#success#">
<div id="main">
    <div class="fof">
        <h1>#title#</h1>
    </div>
</div>
<script>
    if (document.getElementById("success").value == 'true') {
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        if (urlParams.get('redirect')) {
            window.location.href = urlParams.get('redirect')
        }
        if (urlParams.get('autoclose')) {
            window.close();
        }
    }
</script>
</body>
</html>
