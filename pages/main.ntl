<!doctype html>

<html lang="en" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>#title#</title>
    <meta name="description" content="">
    <meta name="author" content="TheSpielplatz">

    <link rel="icon" href="/favicon.ico">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">

    <link href="static/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <script src="static/js/jquery-3.6.0.min.js"></script>
    <script src="static/lib/bootstrap/bootstrap.min.js"></script>

    <link href="static/css/main.css" rel="stylesheet">
</head>


<body class="d-flex h-100 text-center text-white bg-dark">

<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="mb-auto">
        <div>
            <h3 class="float-md-start mb-0 cursor">#title#</h3>

            <!--
            <nav class="nav nav-masthead justify-content-center float-md-end">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
                <a class="nav-link" href="#">Features</a>
                <a class="nav-link" href="#">Contact</a>
            </nav>
            -->
        </div>
    </header>

    <main class="px-3">
        <!-- <h1>#title#</h1> -->
        <p class="lead">
            <a id="btnGetIP" href="#" class="btn btn-lg btn-secondary fw-bold border-white bg-white">Get IP</a>
            <a id="btnShutdown" href="#" class="btn btn-lg btn-secondary fw-bold border-white bg-white">Shutdown</a>
        </p>
    </main>

    <footer class="mt-auto text-white-50">
        <div class="float-md-start">
            <img class="img-responsive" width="70" height="40" src="static/img/tsp_70x112.png" alt="TheSpielplatz" scale="0">
        </div>
        <div class="float-md-end">
            Version: #version#
        </div>
    </footer>

    <div class="toast-container position-absolute p-3 bottom-0 end-0" id="toastPlacement">
        <div id="singleToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
        <div class="toast-header text-white">
            <img src="static/img/tsp_20x20.png" class="rounded me-2" alt="...">
            <strong class="me-auto">#title#</strong>
            <small>now</small>
            <button type="button" class="btn-close text-white" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Hello, world! This is a toast message.
        </div>
    </div>
    </div>
</div>

<script>
    var toastElList = [].slice.call(document.querySelectorAll('.toast'))
    var toastList = toastElList.map(function (toastEl) {
        return new bootstrap.Toast(toastEl, {});
    })

    function showToast(data) {
        $("#singleToast .toast-body").text("message" in data ? data.message : "I did as you asked!");
        $("#singleToast .toast-header").removeClass("bg-success");
        $("#singleToast .toast-header").removeClass("bg-danger");

        switch (data.status) {
            case "ok": $("#singleToast .toast-header").addClass("bg-success"); break;
            case "error": $("#singleToast .toast-header").addClass("bg-danger"); break;
            default: $("#singleToast .toast-header").addClass("bg-secondary"); break;
        }

        $("#singleToast").toast('show');
    }

    $("#btnGetIP").click((event) => {
        $.get( "api/getip", function( data ) {
            showToast(data);
        }).fail(function() {
            alert( "error" );
        });
    });

    $("#btnShutdown").click((event) => {
        $.get( "api/shutdown", function( data ) {
            showToast(data);
        }).fail(function() {
            alert( "error" );
        });
    });
</script>
</body>
</html>
