<!doctype html>

<html lang="en" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>#title#</title>
    <meta name="description" content="">
    <meta name="author" content="TheSpielplatz">

    <link rel="icon" href="/favicon.ico">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">

    <link rel="preload" href="/static/fonts/PressStart2P-Regular.ttf" as="font" crossorigin="anonymous" />

    <link href="/static/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <script src="/static/js/jquery-3.6.0.min.js"></script>
    <script src="/static/lib/bootstrap/bootstrap.min.js"></script>
    <script src="/static/js/toast.js"></script>
    <script src="/static/js/modal.js"></script>
    <script src="/static/js/auth.js"></script>

    <style>
        .toast{
            text-shadow: none;
            color: black;
        }
        .modal {
            text-shadow: none;
            color: black;
        }
        .btn-primary {
            background-color: #2f036b;
        }
        .btn-primary:hover {
            background-color: #9b4cfd;
        }
        .card {
            text-shadow: none;
            border-color: #2F036BFF;
        }
        .card-header {
            background-color: #44059a;
        }
    </style>

    <link href="/static/css/main.css" rel="stylesheet">
</head>

<body class="d-flex h-100 text-center text-white bg-dark">
    <input type="hidden" id="objId" value="#objId#">
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="mb-auto">
        <div>
            <img class="float-md-start mb-0" style="margin-right: 13px;" width="40" height="40" src="/static/img/lightning_40.png" alt="Lightning" scale="0">
            <h3 class="float-md-start mb-0 cursor">Lightning Wallets</h3>

            <nav class="nav nav-masthead justify-content-center float-md-end">
                <a class="nav-link nav-active" data-btn="add-wallet" href="#">Add your wallet</a>
            </nav>
        </div>
    </header>

    <main class="mx-auto" style="width: 800px;">
        <!-- <h1>#title#</h1> -->
        <p class="lead">
        </p>
        <div data-content="cards" class="row row-cols-3 row-cols-md-3 g-4">
        </div>
    </main>

    <footer class="mt-auto text-white-50">
        <div class="float-md-start">
            <img class="img-responsive" src="/static/img/sate_40.png" alt="TheSpielplatz" scale="0">
        </div>
        <div class="float-md-end" data-footer="auth">
        </div>
    </footer>
</div>

<script>
    const cardTemplate = `<div class="col">
        <div class="card text-white bg-secondary">
            <div class="card-header">#header#</div>
            <img src="#src#" class="card-img-top" alt="">
            <!--
            <div class="card-body">#body#</div>
            -->
        </div>
    </div>`;

    let playerHasWallet = false;

    function loadCards() {
        $("[data-content=cards]").empty();

        $.get("/api/lightning", (data) => {
            console.log(data);
            data.forEach((w) => {
                if (w.playerId == auth.player.id) playerHasWallet = true;
                let card = cardTemplate.replace("#header#", w.player);
                card = card.replace("#src#", w.wallet);
                card = card.replace("#body#", "");
                $("[data-content=cards]").append(card);
            });

            $("[data-btn=add-wallet]").text((playerHasWallet ? "Change" : "Add") + " your wallet");
        });
    }

    $("[data-btn=add-wallet]").click((event) => {
        const modalBody = `<form><div class="mb-3 row">
            <label for="wallet-address" class="col-sm-2 col-form-label">Address:</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" id="wallet-address">
            </div>
          </div></form>`;

        const title = (playerHasWallet ? "Change" : "Add") + " Lightning Wallet";
        showModal(title, modalBody, () => {
            const walletAddress = $("#wallet-address").val();

            $.post("/api/lightning", { playerId: auth.player.id, wallet: walletAddress }).done((data) => {
                showToast(data);
                loadCards();
            }).fail(() => {
                alert( "error" );
            });
        });
    });

    $(() => {
        $(".nav").hide();

        auth.callback = () => {
            $(".nav").show();
            loadCards();
        };
    });
</script>
</body>
</html>
